{
  "name": "airsafe",
  "author": "Osiris (github.com/YourHacktivist)",
  "version": "1.0.0",
  "description": "Hidden Camera Detector for Airbnb. Scans local networks to identify suspicious devices such as IP cameras, DVRs, and other IoT equipment.",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "cross-env ELECTRON_IS_DEV=1 electron .",
    "build": "react-scripts build",
    "start": "react-scripts start",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && cross-env ELECTRON_IS_DEV=1 electron .\"",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-win": "npm run build && electron-builder --win --publish=never",
    "dist-mac": "npm run build && electron-builder --mac --publish=never",
    "dist-linux": "npm run build && electron-builder --linux --publish=never"
  },
  "build": {
    "appId": "com.airsafe.detector",
    "productName": "AirSafe",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "package.json",
      {
        "from": "node_modules",
        "filter": [
          "**/*",
          "!**/test/**",
          "!**/tests/**",
          "!**/__tests__/**",
          "!**/spec/**",
          "!**/coverage/**",
          "!**/example/**",
          "!**/examples/**",
          "!**/demo/**",
          "!**/docs/**",
          "!**/doc/**",
          "!**/*.md",
          "!**/README*",
          "!**/CHANGELOG*",
          "!**/HISTORY*",
          "!**/LICENSE*",
          "!**/LICENCE*",
          "!**/AUTHORS*",
          "!**/CONTRIBUTORS*",
          "!**/*.map",
          "!**/*.d.ts",
          "!**/Makefile*",
          "!**/*.yml",
          "!**/*.yaml",
          "!**/tsconfig.json",
          "!**/.npmignore",
          "!**/.gitignore",
          "!**/.eslintrc*",
          "!**/.jshintrc*",
          "!**/.*",
          "!**/yarn.lock",
          "!**/package-lock.json",
          "!**/*.flow",
          "!**/*.patch",
          "!**/*.orig",
          "!**/*.rej",
          "!**/*~",
          "!**/*.bak",
          "!**/.DS_Store",
          "!**/Thumbs.db"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "differentialPackage": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "deb": {
      "depends": ["nmap"]
    },
    "publish": {
      "provider": "github",
      "owner": "YourHacktivist",
      "repo": "AirSafe"
    }
  },
  "dependencies": {
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.3.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^16.18.38",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}